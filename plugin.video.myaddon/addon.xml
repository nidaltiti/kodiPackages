<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.myaddon"
       name="My Addon"
       version="1.0.0"
       provider-name="nidaltiti">

    <requires>
        <import addon="xbmc.addon" version="20.0.0"/>
        <import addon="script.module.cloudscraper" version="1.2.71"/>
        <import addon="script.module.requests" version="2.27.1"/>
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en">My Kodi Addon</summary>
        <description lang="en">Kodi addon with dependencies.</description>
        <platform>all</platform>
        <license>GPL-2.0-only</license>
        <language>en</language>
    </extension>
</addon>
