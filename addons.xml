<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <!-- Repo Add-on -->
    <addon id="repository.myrepo"
           name="My Repository"
           version="1.0.0"
           provider-name="hi man">
        <extension point="xbmc.addon.repository" name="My Repo">
            <dir>
                <info compressed="false">https://raw.githubusercontent.com/nidaltiti/repository.myrepo/master/addons.xml</info>
                <checksum>https://raw.githubusercontent.com/nidaltiti/repository.myrepo/master/addons.xml.md5</checksum>
                <datadir zip="true">https://raw.githubusercontent.com/nidaltiti/repository.myrepo/master/addons</datadir>
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">My Kodi Repository</summary>
            <description lang="en">Contains my add-ons and dependencies</description>
            <platform>all</platform>
        </extension>
    </addon>

    <!-- Dependency Add-on -->
     <addon id="script.module.mydependency"
           name="My Dependency Module"
           version="1.0.0"
           provider-name="hi man">
        <requires>
            <import addon="xbmc.python" version="3.0.0" />
        </requires>
        <extension point="xbmc.python.module" library="lib"/>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Sample Kodi dependency module</summary>
            <description lang="en">This is a sample Kodi dependency add-on.</description>
            <platform>all</platform>
        </extension>
    </addon>
</addons>
