<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
    <!-- Repo Add-on -->
    <addon id="repository.myrepo"
           name="My Repository"
           version="1.0.0"
           provider-name="hi man">
           <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.mydependency" version="1.0.0"/>
         <import addon="script.module.requests-toolbelt" version="1.0.0"/>
         <import addon="script.module.cloudscraper" version="1.0.0"/>
    </requires>
        <extension point="xbmc.addon.repository" name="My Repo">
            <dir>
                <info compressed="false">https://raw.githubusercontent.com/nidaltiti/repository.myrepo/master/addons.xml</info>
                <checksum>https://raw.githubusercontent.com/nidaltiti/repository.myrepo/master/addons.xml.md5</checksum>
               <datadir zip="true">https://raw.githubusercontent.com/nidaltiti/repository.myrepo/master/addons/zips</datadir>  
               <datadir zip="true">https://raw.githubusercontent.com/nidaltiti/repository.myrepo/master/addons/zips</datadir>
           
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">My Kodi Repository</summary>
            <description lang="en">Contains my add-ons and dependencies</description>
            <platform>all</platform>
        </extension>
    </addon>

    <!-- Dependency Add-on -->
     <addon id="script.module.mydependency"
           name="My Dependency Module"
           version="1.0.0"
           provider-name="hi man">
        <requires>
            <import addon="xbmc.python" version="3.0.0" />
        </requires>
        <extension point="xbmc.python.module" library="lib"/>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Sample Kodi dependency module</summary>
            <description lang="en">This is a sample Kodi dependency add-on.</description>
            <platform>all</platform>
        </extension>
    </addon>
 
<addon id="plugin.video.myaddon"
       name="My Video Addon"
       version="1.0.0"
       provider-name="hi man">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.mydependency" version="1.0.0"/>
        <import addon="script.module.requests-toolbelt" version="1.0.0"/>
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en">Simple Video Addon that uses mydependency</summary>
        <description lang="en">
            This is a test video addon that imports script.module.mydependency.
        </description>
        <platform>all</platform>
    </extension>

</addon>

<addon id="script.module.requests-toolbelt" name="requests-toolbelt" version="1.0.0" provider-name="Ian Cordasco, Cory Benfield">
	<requires>
		<import addon="script.module.requests" version="2.0.1"/>
	</requires>
	<extension point="xbmc.python.module" library="lib"/>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">A utility belt for advanced users of python-requests</summary>
		<description lang="en_GB">Packed for KODI from https://pypi.org/project/requests-toolbelt/</description>
		<platform>all</platform>
		<language/>
		<license>Apache Software License (Apache 2.0)</license>
		<forum/>
		<website/>
		<source>https://toolbelt.readthedocs.io/</source>
		<email/>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
	</extension>
</addon>
<addon id="script.module.cloudscraper" name="CloudScraper2" version="1.2.60" provider-name="venomous">
  <requires>
    <import addon="script.module.requests" />
  </requires>
  <extension point="xbmc.python.module" library="lib" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en_gb">Bypasses Cloudflare protection using Python</summary>
    <description lang="en_gb">Wrapper around requests and cfscrape to handle anti-bot challenges.</description>
    <language>en</language>
    <platform>all</platform>
    <license>MIT</license>
    <website>https://github.com/yourusername/yourrepo</website>
    <source>https://github.com/yourusername/yourrepo</source>
  </extension>
</addon>
</addons>
