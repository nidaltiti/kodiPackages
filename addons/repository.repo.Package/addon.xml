 <addon id="repository.repo.Package"
           name="package module Repository"
           version="1.0.0"
           provider-name="nidaltiti">
           <requires>
        <import addon="xbmc.python" version="3.0.0"/>
         <import addon="script.module.requests-toolbelt" version="1.0.0"/>
         <import addon="script.module.cloudscraper" />
          <import addon="script.module.resolveurl" />
           <import addon="repository.github" optional="true" />
            <import addon="script.module.requests-cache" version="0.5.2" />
         
    </requires>
        <extension point="xbmc.addon.repository" name="My Repo">
            <dir>
                <info compressed="false">https://raw.githubusercontent.com/nidaltiti/repository.myrepo/master/addons.xml</info>
                <checksum>https://raw.githubusercontent.com/nidaltiti/repository.myrepo/master/addons.xml.md5</checksum>
               <datadir zip="true">https://raw.githubusercontent.com/nidaltiti/repository.myrepo/master/addons/zips</datadir>  
               <datadir zip="true">https://raw.githubusercontent.com/nidaltiti/repository.myrepo/master/addons/zips</datadir>
           
            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">My Kodi Repository</summary>
            <description lang="en">Contains my add-ons and dependencies</description>
            <platform>all</platform>
            <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
        </extension>
    </addon>