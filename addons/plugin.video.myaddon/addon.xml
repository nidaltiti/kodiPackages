<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.myaddon"
       name="My Video Addon"
       version="1.0.0"
       provider-name="hi man">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.mydependency" version="1.0.0"/>
         <import addon="script.module.requests-toolbelt" version="1.0.0"/>
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary lang="en">Simple Video Addon that uses mydependency</summary>
        <description lang="en">
            This is a test video addon that imports script.module.mydependency.
        </description>
        <platform>all</platform>
    </extension>

</addon>
